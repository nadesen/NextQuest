<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="h4 mb-0">レビュー詳細</h2>
      <div class="text-muted">レビューID: <%= @review.id %></div>
    </div>
    <div>
      <%= link_to '一覧へ戻る', admin_reviews_path, class: 'btn btn-outline-secondary me-2' %>
      <%= link_to '編集', edit_admin_review_path(@review), class: 'btn btn-outline-primary' %>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-start mb-3">
        <div>
          <h5 class="mb-2"><%= @review.title %></h5>
          <p class="text-muted mb-2">
            投稿者:
            <% if @review.user.present? %>
              <% name = @review.user.nickname.presence || "User##{@review.user_id}" %>
              <% begin %>
                <%= link_to name, [:admin, @review.user], class: "text-decoration-none" %>
              <% rescue ActionController::UrlGenerationError, NameError %>
                <%= link_to name, @review.user, class: "text-decoration-none" %>
              <% end %>
            <% else %>
              <span class="text-muted">User#<%= @review.user_id %></span>
            <% end %>
            ・ 評価: <%= @review.rating %>
          </p>
        </div>
        <div class="text-end">
          <% if @review.approved? %>
            <span class="badge bg-success">承認済み</span>
          <% else %>
            <span class="badge bg-warning text-dark">未承認</span>
          <% end %>
        </div>
      </div>

      <p><%= simple_format(@review.content) %></p>

      <div class="mt-4 d-flex gap-2">
        <%# 承認切替ボタンを show にも追加 %>
        <% if @review.approved? %>
          <%= button_to '承認取り消し', admin_review_path(@review),
                method: :patch,
                params: { review: { approved: false } },
                class: 'btn btn-warning',
                data: { confirm: 'このレビューの承認を取り消しますか？' } %>
        <% else %>
          <%= button_to '承認する', admin_review_path(@review),
                method: :patch,
                params: { review: { approved: true } },
                class: 'btn btn-success',
                data: { confirm: 'このレビューを承認しますか？' } %>
        <% end %>

        <%= link_to '削除', admin_review_path(@review), method: :delete, data: { confirm: 'このレビューを削除しますか？' }, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>

  <%# === コメント表示エリア === %>
  <div class="card shadow-sm mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <strong class="mb-0">コメント一覧</strong>
      <small class="text-muted">全 <%= @review.review_comments.count %> 件</small>
    </div>
    <div class="card-body p-0">
      <% if @review.review_comments.any? %>
        <div class="list-group list-group-flush">
          <% @review.review_comments.each do |comment| %>
            <div class="list-group-item d-flex justify-content-between align-items-start">
              <div class="me-3" style="min-width: 56px;">
                <div class="fw-bold small">
                  <% if comment.user.present? %>
                    <% name = comment.user.respond_to?(:nickname) ? comment.user.nickname : "User##{comment.user_id}" %>
                    <% begin %>
                      <%= link_to name, [:admin, comment.user], class: 'text-decoration-none' %>
                    <% rescue ActionController::UrlGenerationError, NameError %>
                      <%= link_to name, comment.user, class: 'text-decoration-none' %>
                    <% end %>
                  <% else %>
                    <span class="text-muted">User#<%= comment.user_id %></span>
                  <% end %>
                </div>
                <div class="small text-muted">
                  <%= l(comment.created_at, format: :short) rescue comment.created_at.to_s %>
                </div>
              </div>
              <div class="flex-fill">
                <!-- 感情分析スコアをコメントごとに表示 -->
                <% if comment.respond_to?(:score) && comment.score.present? %>
                  <span class="sentiment-score small text-muted d-block mb-2">
                    感情分析スコア: <%= number_with_precision(comment.score.to_f, precision: 2) %>
                  </span>
                <% end %>

                <%= simple_format(comment.comment) %>
              </div>
              <div class="ms-3 text-end">
                <%= link_to '削除', admin_review_comment_path(comment),
                      method: :delete,
                      data: { confirm: 'このコメントを削除しますか？' },
                      class: 'btn btn-sm btn-danger' %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="p-4 text-center text-muted">コメントがありません。</div>
      <% end %>
    </div>
  </div>
</div>