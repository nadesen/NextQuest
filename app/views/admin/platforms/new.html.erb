<%# プラットフォーム新規作成画面 %>
<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h4 mb-0">プラットフォーム新規作成</h1>
      <div class="text-muted">新しいプラットフォームを登録します</div>
    </div>
    <div>
      <%= link_to '一覧に戻る', admin_platforms_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <%= form_with model: [:admin, @platform], local: true do |f| %>
            <%= render 'form', form: f, platform: @platform %>
            <div class="d-flex justify-content-end gap-2 mt-4">
              <%= f.submit '作成する', class: 'btn btn-primary' %>
              <%= link_to 'キャンセル', admin_platforms_path, class: 'btn btn-outline-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>