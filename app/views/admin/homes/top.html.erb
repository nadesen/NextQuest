<%# 管理者ダッシュボード/操作パネル %>
<div class="container mt-5">
  <div class="row justify-content-between align-items-center mb-4">
    <div class="col-auto">
      <h1 class="h3 mb-0">管理者ダッシュボード</h1>
      <div class="text-muted">管理者用の操作パネルです</div>
    </div>
    <div class="col-auto">
      <% if admin_signed_in? %>
        <div class="d-flex align-items-center">
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, data: { confirm: "ログアウトしますか？" }, class: "btn btn-outline-secondary btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>

  <%# 管理カード項目を配列で管理 %>
  <% admin_cards = [
    {
      title: "ユーザー管理",
      desc: "登録ユーザーの一覧・編集・削除を行います。",
      path: admin_users_path,
      label: "ユーザー一覧"
    },
    {
      title: "コミュニティ（フォーラム）管理",
      desc: "フォーラム・トピック・ポストの管理を行います。",
      path: admin_forums_path,
      label: "コミュニティ一覧"
    },
    {
      title: "レビュー管理",
      desc: "レビューの一覧やモデレーションを行います。",
      path: (defined?(admin_reviews_path) ? admin_reviews_path : '#'),
      label: "レビュー一覧"
    },
    {
      title: "プラットフォーム管理",
      desc: "プラットフォームの作成・編集・削除を行います。",
      path: admin_platforms_path,
      label: "プラットフォーム一覧"
    },
    {
      title: "ジャンル管理",
      desc: "ジャンルの作成・編集・削除を行います。",
      path: admin_genres_path,
      label: "ジャンル一覧"
    }
  ] %>

  <div class="row g-3">
    <%# 管理用ダッシュボードボタン %>
    <% admin_cards.each do |card| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= card[:title] %></h5>
            <p class="card-text text-muted"><%= card[:desc] %></p>
            <div class="mt-auto">
              <%= link_to card[:label], card[:path], class: "btn btn-primary w-100" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>