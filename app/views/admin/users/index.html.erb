<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="h4 mb-0">ユーザー一覧</h2>
      <div class="text-muted">登録ユーザーの管理</div>
    </div>
    <div>
      <%= link_to '戻る: 管理ダッシュボード', admin_root_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body p-0">
      <!-- 並び替え -->
      <div class="mb-2">
        <% sort_params = { id: 'ID順', name: '名前順', nickname: 'ニックネーム順', created_at: '作成日順' } %>
        <% sort_params.each do |key, label| %>
          <% selected = (params[:sort] == key.to_s) %>
          <% direction = selected ? (params[:direction] == 'asc' ? 'desc' : 'asc') : 'asc' %>
          <%= link_to "#{label}#{selected ? (params[:direction] == 'asc' ? '↑' : '↓') : ''}", url_for(sort: key, direction: direction), class: (selected ? "fw-bold text-primary" : "") %>
          <% unless key == :created_at %>｜<% end %>
        <% end %>
      </div>
      
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>名前</th>
              <th>ニックネーム</th>
              <th>メール</th>
              <th>作成日</th>
              <th class="text-end">操作</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.nickname %></td>
                <td><%= user.email %></td>
                <td><%= l(user.created_at, format: :short) rescue user.created_at.to_s %></td>
                <td class="text-end">
                  <%= link_to '表示', admin_user_path(user), class: 'btn btn-sm btn-outline-primary me-2' %>
                  <%= link_to '編集', edit_admin_user_path(user), class: 'btn btn-sm btn-outline-secondary me-2' %>
                  <% if user.suspended? %>
                    <%= button_to '解除', admin_user_path(user),
                          method: :patch,
                          params: { user: { suspended: false } },
                          form: { data: { turbo: false }, class: 'd-inline' },
                          class: 'btn btn-sm btn-warning',
                          data: { confirm: 'ユーザーを有効化します。よろしいですか？' } %>
                  <% else %>
                    <%= button_to '停止', admin_user_path(user),
                          method: :patch,
                          params: { user: { suspended: true } },
                          form: { data: { turbo: false }, class: 'd-inline' },
                          class: 'btn btn-sm btn-danger',
                          data: { confirm: 'このユーザーを停止します。本当によろしいですか？' } %>
                  <% end %>
                  <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-danger' %>
                </td>
              </tr>
            <% end %>
            <% if @users.empty? %>
              <tr>
                <td colspan="6" class="text-center text-muted py-4">ユーザーが見つかりません。</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-3">
    <!-- 下部ページネーション -->
    <%= paginate @users, theme: 'bootstrap4' %>
  </div>
  
</div>