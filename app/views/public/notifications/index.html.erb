<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <h2 class="h5 mb-4">未読通知一覧</h2>
      <% if @notifications.any? %>
        <ul class="list-group mb-4">
          <% @notifications.each do |notification| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to notification_message(notification),
                  notification_path(notification),
                  method: :patch,
                  class: 'stretched-link text-decoration-none',
                  data: { turbo: false } %>
              <!-- 既読button（行全体リンク化した場合は不要。残したい場合は下記） -->
              <%# 
                <%= link_to '既読にする', notification_path(notification),
                          method: :patch,
                          class: 'btn btn-sm btn-outline-primary',
                          data: { turbo: false } %>
              %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="alert alert-info">未読の通知はありません。</div>
      <% end %>
      <%= link_to 'マイページへ戻る', user_path(current_user), class: 'btn btn-outline-secondary' %>
    </div>
  </div>
</div>