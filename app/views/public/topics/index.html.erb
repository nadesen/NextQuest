<section class="py-5">
  <div class="container">
    <div class="d-flex justify-content-between align-items-start mb-4">
      <div>
        <h2 class="h4 mb-1"><%= h @forum.title %></h2>
        <% if @forum.description.present? %>
          <p class="text-muted small mb-0"><%= h(truncate(@forum.description, length: 150)) %></p>
        <% end %>
      </div>
      <div class="ms-3">
        <% if user_signed_in? && !(current_user.respond_to?(:guest?) && current_user.guest?) %>
          <%= link_to '新規コミュニティ作成', new_forum_topic_path(@forum), class: 'btn btn-primary' %>
        <% elsif user_signed_in? %>
          <span class="badge bg-secondary d-inline-block py-2 px-3">投稿はゲスト不可</span>
        <% end %>
      </div>
    </div>

    <% if @topics.present? %>
      <!-- ソート部分テンプレートのレンダリング -->
      <%= render 'public/topics/sorting', forum: @forum %>
      <!-- トピック一覧テーブル -->
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th scope="col">コミュニティトピック</th>
              <th scope="col" class="d-none d-md-table-cell">作成者</th>
              <th scope="col" class="text-center">コメント数</th>
              <th scope="col" class="text-end d-none d-md-table-cell">作成日</th>
            </tr>
          </thead>
          <tbody>
            <% @topics.each do |topic| %>
              <tr>
                <td class="align-middle position-relative">
                  <%= link_to forum_topic_path(@forum, topic),
                              class: 'stretched-link text-decoration-none text-reset',
                              aria: { label: "#{topic.title} のトピックを開く" } do %>
                    <strong class="d-block"><%= h topic.title %></strong>
                  <% end %>

                  <% if topic.respond_to?(:description) && topic.description.present? %>
                    <small class="text-muted d-block mt-1"><%= h(truncate(topic.description, length: 120)) %></small>
                  <% end %>
                </td>

                <td class="align-middle d-none d-md-table-cell">
                  <% if topic.author_link? %>
                    <%= link_to h(topic.author_name), user_path(topic.author), class: 'text-decoration-none' %>
                  <% else %>
                    <span class="text-muted"><%= h(topic.author_name) %></span>
                  <% end %>
                </td>

                <td class="align-middle text-center">
                  <span class="badge bg-secondary"><%= topic.posts_count.to_i %></span>
                </td>

                <td class="align-middle text-end d-none d-md-table-cell">
                  <small class="text-white"><%= topic.created_at.strftime("%Y/%m/%d") %></small>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-center mt-3">
        <%= paginate @topics, theme: 'bootstrap4' %>
      </div>
    <% else %>
      <div class="alert alert-info">
        このコミュニティにはまだトピックがありません。
        <% if user_signed_in? && !(current_user.respond_to?(:guest?) && current_user.guest?) %>
          <%= link_to '最初のトピックを作成する', new_forum_topic_path(@forum), class: 'btn btn-sm btn-primary ms-2' %>
        <% end %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= link_to 'コミュニティ一覧に戻る', forums_path, class: 'btn btn-link' %>
    </div>
  </div>
</section>