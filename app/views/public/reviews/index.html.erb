<div class="py-5">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="h4 mb-1">レビュー一覧</h2>
        <small class="text-muted"><%= "レビュー数：#{@reviews&.size || 0}" %></small>
      </div>

      <div class="ms-3">
        <% if user_signed_in? %>
          <%= link_to '新規レビュー作成', new_review_path, class: 'btn btn-primary' %>
        <% else %>
          <%= link_to 'ログインしてレビュー作成', new_user_session_path, class: 'btn btn-outline-primary' %>
        <% end %>
      </div>
    </div>

    <% if @reviews.present? %>
      <!-- ソート・フィルター部分テンプレートのレンダリング -->
      <%= render 'public/reviews/sorting_and_filtering' %>
      <! -- レビュー一覧テーブル -->
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th scope="col" class="text-nowrap">投稿日</th>
              <th scope="col">プラットフォーム</th>
              <th scope="col">ジャンル</th>
              <th scope="col">ゲームタイトル</th>
              <th scope="col" class="text-nowrap">評価</th>
              <th scope="col" class="d-none d-md-table-cell">作成者</th>
              <th scope="col" class="text-nowrap">いいね</th>
            </tr>
          </thead>

          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <!-- 各セルをクリック可能にする：セルに position-relative を付与し、その中に stretched-link を置く -->
                <td class="text-nowrap position-relative">
                  <%= link_to review_path(review),
                              class: 'stretched-link text-decoration-none text-reset',
                              aria: { label: "レビュー #{review.title} の詳細を表示" } do %>
                    <%= review.created_at.in_time_zone(Time.zone).strftime('%Y/%m/%d') if review.created_at %>
                  <% end %>
                </td>

                <td class="position-relative">
                  <%= link_to review_path(review),
                              class: 'stretched-link text-decoration-none text-reset',
                              aria: { label: "レビュー #{review.title} の詳細を表示（プラットフォーム）" } do %>
                    <%= h(review.platform&.name.presence || '未設定') %>
                  <% end %>
                </td>

                <td class="position-relative">
                  <%= link_to review_path(review),
                              class: 'stretched-link text-decoration-none text-reset',
                              aria: { label: "レビュー #{review.title} の詳細を表示（ジャンル）" } do %>
                    <%= h(review.genre&.name.presence || '未設定') %>
                  <% end %>
                </td>

                <!-- ゲームタイトルは強調表示 -->
                <td class="align-middle position-relative">
                  <%= link_to review_path(review),
                              class: 'stretched-link text-decoration-none text-reset',
                              aria: { label: "#{review.title} のレビューを表示" } do %>
                    <strong class="d-block"><%= h(review.title.presence || 'タイトルなし') %></strong>
                    <% if review.respond_to?(:description) && review.try(:description).present? %>
                      <small class="text-muted d-block mt-1"><%= h(truncate(review.description, length: 120)) %></small>
                    <% end %>
                  <% end %>
                </td>

                <td class="text-nowrap position-relative">
                  <%= link_to review_path(review),
                              class: 'stretched-link text-decoration-none text-reset',
                              aria: { label: "レビュー #{review.title} の詳細を表示（評価）" } do %>
                    <%= render 'public/reviews/static_rate', review: review %>
                  <% end %>
                </td>

                <!-- 作成者セルは別扱い（クリック可能） -->
                <td class="align-middle d-none d-md-table-cell">
                  <% if review.author_link? %>
                    <%= link_to h(review.author_name), user_path(review.author), class: 'text-decoration-none' %>
                  <% else %>
                    <span class="text-muted"><%= h(review.author_name) %></span>
                  <% end %>
                </td>

                <!-- いいねボタン（部分テンプレート） -->
                <td class="align-middle text-center">
                  <div class="d-inline-block like-<%= review.id %>">
                    <%= render 'public/likes/btn', review: review %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-center mt-3">
        <%= paginate(@reviews) if defined?(Kaminari) || defined?(WillPaginate) rescue '' %>
      </div>
    <% else %>
      <!-- ソート・フィルター部分テンプレートのレンダリング -->
      <%= render 'public/reviews/sorting_and_filtering' %>
      
      <div class="alert alert-info">
        現在、表示するレビューはありません。
      </div>
    <% end %>
  </div>
</div>