<%# レビューのいいねボタン（AJAX 用） %>
<%# 渡し: review %>
<% if user_signed_in? %>
  <% if current_user.likes.exists?(likeable_id: review.id) %>
    <%= link_to likes_review_path(review), method: :delete, remote: true, class: 'text-decoration-none' do %>
      <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
      <span class="ms-1"><%= review.likes_count %></span>
    <% end %>
  <% else %>
    <%= link_to likes_review_path(review), method: :post, remote: true, class: 'text-decoration-none' do %>
      <i class="fas fa-heart" aria-hidden="true"></i>
      <span class="ms-1"><%= review.likes_count %></span>
    <% end %>
  <% end %>
<% else %>
  <span class="text-muted">
    <i class="fas fa-heart" aria-hidden="true"></i>
    <span class="ms-1"><%= review.likes_count %></span>
  </span>
<% end %>