<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 d-flex justify-content-center">
      <div class="register-form-outer" style="width: 100%; max-width: 1180px;">
        <h2 class="register-title text-center mt-4 mb-4">新規会員登録</h2>
        <div class="p-4 rounded shadow-sm register-form-wrapper">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>

            <!-- 氏名 -->
            <div class="form-group row align-items-center mb-3">
              <label class="col-3 col-form-label text-left label-nowrap">氏名</label>
              <div class="col-9">
                <%= f.text_field :name, class: "form-control", placeholder: "例: 山田 太郎" %>
              </div>
            </div>

            <!-- ニックネーム（表示名） -->
            <div class="form-group row align-items-center mb-3">
              <label class="col-3 col-form-label text-left label-nowrap">ニックネーム（表示名）</label>
              <div class="col-9">
                <%= f.text_field :nickname, class: "form-control", placeholder: "例: ゲーマーたろう" %>
              </div>
            </div>

            <!-- メールアドレス -->
            <div class="form-group row mb-3">
              <label class="col-3 col-form-label text-left label-nowrap">メールアドレス</label>
              <div class="col-9">
                <%= f.email_field :email, class: "form-control", placeholder: "sample@example.com" %>
              </div>
            </div>

            <!-- パスワード -->
            <div class="form-group row mb-3">
              <label class="col-3 col-form-label text-left label-nowrap">パスワード(6文字以上)</label>
              <div class="col-9">
                <%= f.password_field :password, class: "form-control" %>
              </div>
            </div>

            <!-- パスワード(確認用) -->
            <div class="form-group row mb-3">
              <label class="col-3 col-form-label text-left label-nowrap">パスワード(確認用)</label>
              <div class="col-9">
                <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-3"></div>
              <div class="col-9 text-center">
                <%= f.submit "新規登録", class: "btn btn-success register-btn w-75" %>
              </div>
            </div>
          <% end %>

          <div class="already-registered mt-4">
            <div class="already-title mb-2">既に登録済みの方</div>
            <div>
              <%= link_to "こちら", new_session_path(resource_name), style: "color: #0057d1;" %> からログインしてください。
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
